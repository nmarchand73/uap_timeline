---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "80 ans de mystère, 9 sources documentaires, 1 documentaire (47 chapitres), 33 personnes clés, 33 incidents majeurs, 37 DIRD." } = Astro.props;

const navGroups = [
  { label: 'Explorer', links: [
    { href: '/', label: 'Accueil' },
    { href: '/timeline/', label: 'Timeline' },
    { href: '/timeline/auditions/', label: 'Auditions Congrès' },
    { href: '/themes/', label: 'Thèmes' },
    { href: '/documentary/', label: 'Documentaire' },
  ]},
  { label: 'Données', links: [
    { href: '/documents/', label: 'Documents' },
    { href: '/people/', label: 'Personnes' },
    { href: '/incidents/', label: 'Incidents' },
    { href: '/programs/', label: 'Programmes' },
  ]},
  { label: 'Sources', links: [
    { href: '/videos/', label: 'Vidéothèque' },
    { href: '/dirds/', label: 'DIRD' },
    { href: '/links/', label: 'Sources' },
    { href: '/search/', label: 'Recherche' },
  ]},
];
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600;700&family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | UAP Timeline</title>
  </head>
  <body>
    <a href="#main" class="skip-link">Aller au contenu</a>
    <header class="site-header">
      <nav class="nav" aria-label="Navigation principale">
        <a href="/" class="logo">UAP Timeline</a>
        <button type="button" class="nav-toggle" aria-expanded="false" aria-controls="nav-menu" aria-label="Ouvrir le menu">
          <span class="hamburger"></span>
        </button>
        <div class="nav-menu" id="nav-menu">
          {navGroups.map((group) => (
            <div class="nav-group">
              <span class="nav-group-label">{group.label}</span>
              <ul class="nav-links">
                {group.links.map((link) => (
                  <li><a href={link.href}>{link.label}</a></li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </nav>
    </header>
    <main class="main" id="main">
      <div class="main-inner">
        <slot />
      </div>
    </main>
    <footer class="site-footer">
      <div class="footer-inner">
        <p class="footer-tagline">UAP Timeline — Exploration de 8 documents + 1 documentaire. The Age of Disclosure.</p>
        <nav class="footer-nav" aria-label="Liens rapides">
          <a href="/timeline/">Timeline</a>
          <a href="/documentary/">Documentaire</a>
          <a href="/documents/">Documents</a>
          <a href="/search/">Recherche</a>
        </nav>
      </div>
    </footer>
    <script>
      (function() {
        const btn = document.querySelector('.nav-toggle');
        const menu = document.getElementById('nav-menu');
        if (!btn || !menu) return;
        btn.addEventListener('click', () => {
          const open = btn.getAttribute('aria-expanded') === 'true';
          btn.setAttribute('aria-expanded', String(!open));
          menu.classList.toggle('is-open', !open);
          document.body.classList.toggle('nav-open', !open);
        });
        menu.querySelectorAll('a').forEach((a) => {
          a.addEventListener('click', () => {
            btn.setAttribute('aria-expanded', 'false');
            menu.classList.remove('is-open');
            document.body.classList.remove('nav-open');
          });
        });
      })();
    </script>
  </body>
</html>

<style is:global>
  :root {
    --bg: #0a0a0f;
    --bg-elevated: #12121a;
    --bg-card: #16161f;
    --text: #e0e0e8;
    --text-muted: #8888a0;
    --accent: #00d4aa;
    --accent-dim: #00a080;
    --accent2: #7c3aed;
    --border: #2a2a3a;
    --danger: #ff4466;
    --nav-height: 3.5rem;
    --content-max: 1200px;
    --radius: 8px;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family: 'DM Sans', system-ui, -apple-system, sans-serif;
    background: var(--bg);
    color: var(--text);
    line-height: 1.6;
    scroll-padding-top: var(--nav-height);
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow-x: hidden;
  }

  body::before {
    content: '';
    position: fixed;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 9999;
  }

  a {
    color: var(--accent);
    text-decoration: none;
  }

  a:hover {
    color: var(--accent-dim);
    text-decoration: underline;
  }

  a:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .skip-link {
    position: absolute;
    top: -100px;
    left: 1rem;
    padding: 0.5rem 1rem;
    background: var(--accent);
    color: var(--bg);
    font-weight: 600;
    z-index: 100;
    transition: top 0.2s;
  }

  .skip-link:focus {
    top: 1rem;
  }

  .site-header {
    position: sticky;
    top: 0;
    z-index: 50;
    background: var(--bg-elevated);
    border-bottom: 1px solid var(--border);
    padding: 0 1rem;
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5rem 0;
    max-width: var(--content-max);
    margin: 0 auto;
    min-height: var(--nav-height);
    padding: 0.5rem 0;
  }

  .logo {
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--accent);
  }

  .logo:hover {
    text-decoration: none;
  }

  .nav-toggle {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--text);
    border-radius: 4px;
  }

  .nav-toggle:hover {
    background: var(--bg-card);
  }

  .nav-toggle:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .hamburger {
    display: block;
    width: 1.25rem;
    height: 2px;
    background: var(--text);
    position: relative;
    transition: background 0.2s;
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--text);
    transition: transform 0.2s;
  }

  .hamburger::before { top: -5px; }
  .hamburger::after { top: 5px; }

  .nav-toggle[aria-expanded="true"] .hamburger {
    background: transparent;
  }

  .nav-toggle[aria-expanded="true"] .hamburger::before {
    transform: translateY(5px) rotate(45deg);
  }

  .nav-toggle[aria-expanded="true"] .hamburger::after {
    transform: translateY(-5px) rotate(-45deg);
  }

  .nav-menu {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1.25rem;
    align-items: center;
    justify-content: flex-end;
  }

  .nav-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .nav-group-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
  }

  .nav-links {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    font-size: 0.9rem;
  }

  .main {
    flex: 1;
    padding: 1.5rem 1rem 2rem;
  }

  .main-inner {
    max-width: var(--content-max);
    margin: 0 auto;
  }

  .main h1 {
    font-size: 1.75rem;
    margin: 0 0 0.5rem;
    font-weight: 600;
  }

  .main h2 {
    font-size: 1.25rem;
    margin: 1.5rem 0 0.75rem;
    font-weight: 600;
  }

  .main .intro {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    font-size: 1rem;
    line-height: 1.5;
  }

  .site-footer {
    padding: 1.5rem 1rem;
    background: var(--bg-elevated);
    border-top: 1px solid var(--border);
  }

  .footer-inner {
    max-width: var(--content-max);
    margin: 0 auto;
    text-align: center;
  }

  .footer-tagline {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin: 0 0 0.75rem;
  }

  .footer-nav {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .footer-nav a {
    font-size: 0.875rem;
  }

  @media (max-width: 1100px) {
    .nav-group-label {
      display: none;
    }

    .nav-menu {
      gap: 0.5rem 1rem;
    }
  }

  /* Menu hamburger : à partir de 1024px pour éviter le débordement à droite */
  @media (max-width: 1024px) {
    .nav-toggle {
      display: block;
      min-width: 44px;
      min-height: 44px;
      padding: 0.5rem;
    }

    .nav-menu {
      position: fixed;
      top: var(--nav-height);
      left: 0;
      right: 0;
      bottom: auto;
      flex-direction: column;
      align-items: stretch;
      gap: 0;
      padding: 1rem;
      background: var(--bg-elevated);
      border-bottom: 1px solid var(--border);
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    .nav-menu.is-open {
      max-height: 80vh;
      overflow-y: auto;
    }

    .nav-group {
      flex-direction: column;
      align-items: flex-start;
      padding: 0.75rem 0;
      border-bottom: 1px solid var(--border);
    }

    .nav-group:last-child {
      border-bottom: none;
    }

    .nav-group-label {
      display: block;
      font-weight: 600;
      color: var(--accent);
    }

    .nav-links {
      flex-direction: column;
      gap: 0.25rem;
    }

    .nav-links a {
      padding: 0.5rem 0;
      min-height: 44px;
      display: inline-flex;
      align-items: center;
    }

    body.nav-open {
      overflow: hidden;
    }
  }
</style>
