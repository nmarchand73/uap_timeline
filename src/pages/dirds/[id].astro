---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { marked } from 'marked';
import fs from 'node:fs';
import path from 'node:path';

export const getStaticPaths = async () => {
  const dirdsPath = path.join(process.cwd(), 'content', 'dirds.json');
  const dirds = JSON.parse(fs.readFileSync(dirdsPath, 'utf-8'));
  return dirds.map((d) => ({ params: { id: String(d.id) } }));
};

const { id } = Astro.params;
const dirdsPath = path.join(process.cwd(), 'content', 'dirds.json');
const analysisPath = path.join(process.cwd(), 'content', 'dirds-analysis.json');
const dirds = JSON.parse(fs.readFileSync(dirdsPath, 'utf-8'));
const dird = dirds.find((d) => String(d.id) === id);

if (!dird) {
  return Astro.redirect('/dirds/');
}

let analyses = {};
try {
  analyses = JSON.parse(fs.readFileSync(analysisPath, 'utf-8') || '{}');
} catch {
  analyses = {};
}
const a = analyses[id] || {};
const related = (a.related_dird_ids || [])
  .filter((rid) => rid !== Number(id))
  .map((rid) => dirds.find((d) => d.id === rid))
  .filter(Boolean);
---

<BaseLayout title={`DIRD ${id} — ${dird.title}`} description={a.summary || dird.title}>
  <article class="dird-page">
    <header>
      <span class="dird-num">DIRD {id}</span>
      <h1>{dird.title}</h1>
      <p class="meta">{dird.author} — {dird.affiliation}</p>
      <div class="format-links">
        <a href={dird.url} class="format-btn pdf" target="_blank" rel="noopener">Ouvrir le PDF</a>
      </div>
      {a.domains?.length > 0 && (
        <div class="badges">
          {a.domains.map((dom) => (
            <span class="badge">{dom}</span>
          ))}
        </div>
      )}
    </header>

    <aside class="sidebar">
      <h3>DIRD liés</h3>
      <ul>
        {related.map((r) => (
          <li><a href={`/dirds/${r.id}/`}>DIRD {r.id} — {r.title.slice(0, 40)}…</a></li>
        ))}
      </ul>
      {related.length === 0 && <p class="muted">Aucun</p>}
    </aside>

    <div class="content">
      <div class="pdf-viewer">
        <iframe src={dird.url} title={dird.title} class="pdf-iframe" />
      </div>

      {a.summary && (
        <section class="analysis-section summary-rich">
          <h2>Résumé technique</h2>
          <div class="summary-content" set:html={marked.parse(a.summary)} />
        </section>
      )}

      {a.key_concepts?.length > 0 && (
        <section class="analysis-section">
          <h2>Concepts clés</h2>
          <ul>
            {a.key_concepts.map((c) => (
              <li>{c}</li>
            ))}
          </ul>
        </section>
      )}

      {a.relevance_ict && (
        <section class="analysis-section highlight">
          <h2>Pertinence informatique / électronique</h2>
          <p>{a.relevance_ict}</p>
        </section>
      )}

      {a.applications && (
        <section class="analysis-section">
          <h2>Applications industrielles</h2>
          <p>{a.applications}</p>
        </section>
      )}

      {!a.summary && !a.relevance_ict && (
        <p class="muted">Analyse non encore générée. Exécutez <code>npm run generate-dird-analyses</code> (avec OPENAI_API_KEY ou ANTHROPIC_API_KEY).</p>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .dird-page {
    display: grid;
    grid-template-columns: 1fr 220px;
    gap: 2rem;
    align-items: start;
  }

  .sidebar {
    order: -1;
    grid-column: 2;
    position: sticky;
    top: calc(var(--nav-height, 3.5rem) + 1rem);
  }

  .content {
    grid-column: 1;
    min-width: 0;
    overflow: hidden;
  }

  .dird-num {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    margin-bottom: 0.25rem;
  }

  .meta {
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .format-links {
    margin-bottom: 1rem;
  }

  .format-btn {
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .format-btn.pdf {
    background: var(--danger);
    color: white;
  }

  .format-btn:hover {
    opacity: 0.9;
    text-decoration: none;
  }

  .badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: var(--bg-elevated);
    border-radius: 4px;
    color: var(--text-muted);
  }

  .sidebar h3 {
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .sidebar ul {
    margin: 0 0 1rem;
    padding-left: 1.25rem;
  }

  .muted {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .pdf-viewer {
    width: 100%;
    max-width: 100%;
    height: min(70vh, 800px);
    min-height: 480px;
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 2rem;
    background: var(--bg-elevated);
  }

  .pdf-iframe {
    display: block;
    width: 100%;
    height: 100%;
    min-height: 400px;
    border: none;
  }

  .analysis-section {
    margin-bottom: 1.5rem;
  }

  .analysis-section h2 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: var(--accent);
  }

  .analysis-section.highlight {
    padding: 1rem;
    background: var(--bg-elevated);
    border-radius: 8px;
    border-left: 4px solid var(--accent);
  }

  .analysis-section ul {
    margin: 0;
    padding-left: 1.25rem;
  }

  .summary-rich .summary-content {
    line-height: 1.6;
  }

  .summary-rich .summary-content h3 {
    font-size: 1rem;
    margin: 1.25rem 0 0.5rem;
    color: var(--accent);
  }

  .summary-rich .summary-content h3:first-child {
    margin-top: 0;
  }

  .summary-rich .summary-content p {
    margin: 0 0 0.75rem;
  }

  .summary-rich .summary-content strong {
    color: var(--text);
  }

  @media (max-width: 768px) {
    .dird-page {
      grid-template-columns: 1fr;
    }

    .sidebar {
      grid-column: 1;
      order: 0;
      position: static;
    }

    .pdf-viewer {
      min-height: 400px;
    }
  }
</style>
