---
import BaseLayout from '../../layouts/BaseLayout.astro';
import EpubReader from '../../components/EpubReader.astro';
import fs from 'node:fs';
import path from 'node:path';

export const getStaticPaths = async () => {
  const docsPath = path.join(process.cwd(), 'content', 'docs-meta.json');
  const docs = JSON.parse(fs.readFileSync(docsPath, 'utf-8'));
  return docs.filter((d: { type: string }) => d.type !== 'documentary').map((d: { slug: string }) => ({
    params: { slug: d.slug },
  }));
};

const { slug } = Astro.params;
const docsPath = path.join(process.cwd(), 'content', 'docs-meta.json');
const docs = JSON.parse(fs.readFileSync(docsPath, 'utf-8'));
const doc = docs.find((d: { slug: string }) => d.slug === slug);

if (!doc) {
  return Astro.redirect('/documents/');
}

const mdPath = path.join(process.cwd(), 'doc', 'md', doc.filename);
let mdContent = '';
if (fs.existsSync(mdPath)) {
  mdContent = fs.readFileSync(mdPath, 'utf-8');
}

const hasPdf = !!doc.pdf_path;
const hasEpub = !!doc.epub_path;
---

<BaseLayout title={doc.title} description={`${doc.authors.join(', ')} â€” ${doc.year}`}>
  <article class="document-page">
    <header>
      <h1>{doc.title}</h1>
      <p class="meta">{doc.authors.join(', ')} â€” {doc.year} ({doc.language})</p>
      <div class="format-links">
        {hasPdf && (
          <a href={doc.pdf_path} class="format-btn pdf" target="_blank" rel="noopener">ðŸ“„ Lire le PDF</a>
        )}
        {hasEpub && !hasPdf && (
          <span class="format-hint">ðŸ“š Lecture directe ci-dessous</span>
        )}
        {hasEpub && (
          <a href={doc.epub_path} class="format-btn epub" download>ðŸ“¥ TÃ©lÃ©charger EPUB</a>
        )}
      </div>
      <div class="badges">
        {doc.themes?.map((t: string) => (
          <span class="badge">{t.replace(/-/g, ' ')}</span>
        ))}
      </div>
    </header>

    <aside class="sidebar">
      <h3>Personnes</h3>
      <ul>
        {doc.people?.map((id: string) => (
          <li><a href={`/people/${id}/`}>{id.replace(/-/g, ' ')}</a></li>
        ))}
      </ul>
      <h3>Incidents</h3>
      <ul>
        {doc.incidents?.map((id: string) => (
          <li><a href={`/incidents/#${id}`}>{id.replace(/-/g, ' ')}</a></li>
        ))}
      </ul>
    </aside>

    <div class="content">
      {hasPdf ? (
        <div class="pdf-viewer">
          <iframe src={doc.pdf_path} title={doc.title} class="pdf-iframe" />
        </div>
      ) : hasEpub ? (
        <EpubReader epubUrl={doc.epub_path} title={doc.title} />
      ) : mdContent ? (
        <div class="md-content">
          {mdContent.slice(0, 8000).split('\n').map((line, i) => (
            <p key={i}>{line || '\u00A0'}</p>
          ))}
          {mdContent.length > 8000 && <p>â€¦</p>}
        </div>
      ) : (
        <p>Contenu Ã  charger. Placez le PDF ou EPUB dans <code>doc/src/</code> puis exÃ©cutez <code>npm run copy-docs</code>.</p>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .document-page {
    display: grid;
    grid-template-columns: 1fr 220px;
    gap: 2rem;
    align-items: start;
  }

  .sidebar {
    order: -1;
    grid-column: 2;
    position: sticky;
    top: calc(var(--nav-height, 3.5rem) + 1rem);
  }

  .content {
    grid-column: 1;
    min-width: 0;
    overflow: hidden;
  }

  .meta {
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: var(--bg-elevated);
    border-radius: 4px;
    color: var(--text-muted);
  }

  .sidebar h3 {
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .sidebar ul {
    margin: 0 0 1rem;
    padding-left: 1rem;
  }

  .md-content {
    font-size: 0.95rem;
    line-height: 1.7;
  }

  .format-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .format-btn {
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .format-btn.pdf {
    background: var(--danger);
    color: white;
  }

  .format-btn.epub {
    background: var(--accent);
    color: var(--bg);
  }

  .format-btn:hover {
    opacity: 0.9;
    text-decoration: none;
  }

  .format-hint {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .epub-notice {
    padding: 1rem;
    background: var(--bg-elevated);
    border-radius: 6px;
    margin-bottom: 1rem;
  }

  .pdf-viewer,
  .content :global(.epub-reader) {
    width: 100%;
    max-width: 100%;
    margin-bottom: 1.5rem;
  }

  .pdf-viewer {
    height: min(80vh, 900px);
    min-height: 480px;
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    background: var(--bg-elevated);
  }

  .pdf-iframe {
    display: block;
    width: 100%;
    height: 100%;
    min-height: 400px;
    border: none;
  }

  @media (max-width: 768px) {
    .document-page {
      grid-template-columns: 1fr;
    }

    .sidebar {
      grid-column: 1;
      order: 0;
      position: static;
    }

    .pdf-viewer {
      min-height: 400px;
    }
  }
</style>
